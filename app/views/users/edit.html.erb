<% provide(:title, "Edit user") %> 
<h1>プロフィールの編集</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'fields', f: f %>
      <%= f.submit "変更を保存する", class: "btn btn-large btn-primary" %>
    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">画像を変更する</a>
  </div>
</div>
