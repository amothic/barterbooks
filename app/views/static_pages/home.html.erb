<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/book_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Books</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Barter Booksへようこそ</h1>

    <h2>
      気になっている本を見つけましょう。
    </h2>

    <%= link_to "Barter Booksに登録する", signup_path, class: "btn btn-large btn-primary" %>
  </div>
<% end %>
